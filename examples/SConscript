#custom build flags
flags = ['-O2', '-march=native', '-Wall', '-W' ]

#setup libraries to link and paths
libs=['hdf5_hl_cpp','hdf5_cpp']

include=['../include']

#define build environment
env = Environment()
warnEnv = env.Clone(LIBS=libs, CXXFLAGS=flags, CPPPATH=include)

writeProgram = warnEnv.Program(target='write', source=['write.cpp']);
readProgram = warnEnv.Program(target='read', source=['read.cpp']);
convProgram = warnEnv.Program(target='shs2hdf5', source=['shs2hdf5.cpp']);


warnEnv.Depends(writeProgram, Glob('../include/*'))
warnEnv.Depends(readProgram, Glob('../include/*'))
warnEnv.Depends(convProgram, Glob('../include/*'))

warnEnv.Clean('.', Glob('*.h5'));

